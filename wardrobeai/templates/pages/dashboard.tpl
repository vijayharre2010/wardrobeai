<div class="content-card">
    <h1 class="page-title">
        <i data-lucide="layout-dashboard" class="icon"></i>
        Dashboard
    </h1>
    <p style="font-size: 1.1rem; color: #cccccc; margin-bottom: 2rem;">
        Welcome back! Here's your wardrobe overview and insights.
    </p>

    {% if not is_premium %}
    <div style="background: linear-gradient(145deg, rgba(255, 107, 107, 0.1) 0%, rgba(255, 107, 107, 0.05) 100%); border: 1px solid rgba(255, 107, 107, 0.3); border-radius: 12px; padding: 1.5rem; margin-bottom: 2rem;">
        <div style="display: flex; align-items: center; gap: 1rem;">
            <i data-lucide="alert-triangle" class="icon-small" style="color: #ff6b6b;"></i>
            <div style="flex: 1;">
                <div style="font-weight: 600; color: #ff6b6b;">Free Plan Active</div>
                <div style="color: #cccccc; font-size: 0.9rem;">{{ free_plan_message }}</div>
            </div>
            <a href="/page/profile#premium" style="text-decoration: none;">
                <button class="btn-primary" style="padding: 0.75rem 1.5rem; font-size: 0.9rem;">
                    Upgrade Now
                </button>
            </a>
        </div>
    </div>
    {% endif %}
</div>

<div class="grid grid-3">
    <div class="content-card">
        <h3 class="card-title">
            <i data-lucide="shirt" class="icon-small"></i>
            Wardrobe Items
        </h3>
        <div style="font-size: 2.5rem; font-weight: 700; color: #B19CD9; margin: 1rem 0;">
            {{ stats.item_count or 0 }}
        </div>
        <p style="color: #888; font-size: 0.9rem;">Total items in your collection</p>
    </div>

    <div class="content-card">
        <h3 class="card-title">
            <i data-lucide="sparkles" class="icon-small"></i>
            AI Suggestions
        </h3>
        <div style="font-size: 2.5rem; font-weight: 700; color: #4ecdc4; margin: 1rem 0;">
            {{ stats.generations_count or 0 }}
        </div>
        <p style="color: #888; font-size: 0.9rem;">Outfit combinations generated</p>
    </div>

    <div class="content-card">
        <h3 class="card-title">
            <i data-lucide="calendar" class="icon-small"></i>
            This Week
        </h3>
        <div style="font-size: 2.5rem; font-weight: 700; color: #ff6b6b; margin: 1rem 0;">
            {{ stats.planned_count or 0 }}
        </div>
        <p style="color: #888; font-size: 0.9rem;">Outfits planned</p>
    </div>
</div>

<div class="content-card">
    <h2 class="section-title">
        <i data-lucide="trending-up" class="icon-small"></i>
        Recent Activity
    </h2>
    <div style="display: flex; flex-direction: column; gap: 1rem;">
        {% for activity in stats.recent_activity %}
        <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: linear-gradient(145deg, #2a2a2a 0%, #1f1f1f 100%); border-radius: 8px;">
            <i data-lucide="plus-circle" class="icon-small" style="color: #4ecdc4;"></i>
            <div>
                <div style="font-weight: 600; color: #ffffff;">{{ activity.details or activity.action }}</div>
                <div style="font-size: 0.8rem; color: #888;">{{ activity.rel_time }}</div>
            </div>
        </div>
        {% endfor %}
        {% if not stats.recent_activity %}
        <div style="text-align: center; color: #888; padding: 2rem;">
            No recent activity yet. Start by generating outfits or adding items to your wardrobe.
        </div>
        {% endif %}
    </div>
</div>

<div class="content-card">
    <h2 class="section-title">
        <i data-lucide="lightbulb" class="icon-small"></i>
        Quick Actions
    </h2>
    <div class="grid grid-3">
        <a href="/page/daily" style="text-decoration: none;">
            <div class="content-card" style="cursor: pointer; transition: all 0.3s ease;">
                <div style="text-align: center;">
                    <i data-lucide="sun" class="icon" style="color: #B19CD9; margin-bottom: 1rem;"></i>
                    <h3 style="color: #ffffff; margin-bottom: 0.5rem;">Daily Outfits</h3>
                    <p style="color: #888; font-size: 0.9rem;">Personalized daily recommendations</p>
                </div>
            </div>
        </a>
        <a href="/page/generate" style="text-decoration: none;">
            <div class="content-card" style="cursor: pointer; transition: all 0.3s ease;">
                <div style="text-align: center;">
                    <i data-lucide="image" class="icon" style="color: #4ecdc4; margin-bottom: 1rem;"></i>
                    <h3 style="color: #ffffff; margin-bottom: 0.5rem;">AI Generator</h3>
                    <p style="color: #888; font-size: 0.9rem;">Create custom outfit images</p>
                </div>
            </div>
        </a>
        <a href="/page/profile" style="text-decoration: none;">
            <div class="content-card" style="cursor: pointer; transition: all 0.3s ease;">
                <div style="text-align: center;">
                    <i data-lucide="user" class="icon" style="color: #ff6b6b; margin-bottom: 1rem;"></i>
                    <h3 style="color: #ffffff; margin-bottom: 0.5rem;">My Profile</h3>
                    <p style="color: #888; font-size: 0.9rem;">Update personal details</p>
                </div>
            </div>
        </a>
    </div>
</div>
